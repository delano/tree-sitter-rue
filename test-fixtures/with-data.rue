<data window="post" merge="true">
{
  "id": 42,
  "title": "Introduction to Rhales",
  "author": "{{current_user.name}}",
  "published_at": "2025-10-17",
  "tags": ["ruby", "framework", "web"]
}
</data>

<template>
<article class="blog-post">
  <header>
    <h1>{{title}}</h1>
    <p class="meta">
      By {{author}} on {{published_at}}
    </p>
  </header>
  <div class="tags">
    {{#each tags}}
      <span class="tag">{{this}}</span>
    {{/each}}
  </div>
</article>
</template>

<logic>
